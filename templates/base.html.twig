<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link rel="stylesheet" href="{{ asset('build/app.css') }}">

</head>
<body>
<header>
    <nav class="navbar navbar-expand-md bg-primary fixed-top">
        <div class="container">
            <div class="navbar-translate">
                <a class="navbar-brand" href="{{ path('index') }}">WoWCollection</a>
                <button class="navbar-toggler navbar-toggler" type="button" data-toggle="collapse"
                        data-target="#navigation" aria-controls="navigation-index" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse justify-content-end" id="navigation"
                 data-nav-image="{{ asset('build/images/blurred-image-1.jpg') }}">
                {% set currentPath = app.request.attributes.get("_route") %}
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item {{ currentPath == "index" ? "active" : "" }}">
                        <a class="nav-link" href="{{ path('index') }}">Home</a>
                    </li>
                </ul>
                <ul class="navbar-nav px-3">
                    {% if app.user %}
                        <li class="nav-item text-nowrap">
                            <a class="nav-link" href="{{ path('logout') }}">Sign out</a>
                        </li>
                    {% else %}
                        <li class="nav-item text-nowrap">
                            <a class="nav-link" href="{{ hwi_oauth_login_url('battle_net') }}">Sign in</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

</header>
<div class="wrapper">
    {% block body %}
        <div class="section">
            <div class="container">
                {% block subbody %}{% endblock %}
            </div>
        </div>
    {% endblock %}
</div>

{% block javascripts %}{% endblock %}
<script src="{{ asset('build/app.js') }}"></script>
</body>
</html>
